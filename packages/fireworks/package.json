{
    "name": "@basmilius/effects-fireworks",
    "license": "MIT",
    "version": "0.0.0",
    "author": {
        "email": "bas@mili.us",
        "name": "Bas Milius",
        "url": "https://bas.dev"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/basmilius/visual-effects.git",
        "directory": "packages/fireworks"
    },
    "scripts": {
        "build": "esbuild src/index.ts --bundle --sourcemap --external:@basmilius/effects-common --platform=browser --target=esnext --format=esm --outfile=dist/index.js && tsc && tsc-alias",
        "dev": "esbuild src/index.ts --bundle --sourcemap --external:@basmilius/effects-common --platform=browser --target=esnext --format=esm --outfile=dist/index.js --watch"
    },
    "engines": {
        "node": ">=23"
    },
    "files": [
        "dist",
        "src"
    ],
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./src/index.ts",
    "typings": "./src/index.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "dependencies": {
        "@basmilius/effects-common": "workspace:*"
    },
    "devDependencies": {
        "esbuild": "^0.25.8",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.2"
    }
}
